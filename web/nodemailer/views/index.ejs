<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/bootstrap.min.css">
  <title>Nodemailer</title>
</head>
<body>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <h1>Nodemailer Login</h1>
        <form method="POST" action="http://localhost:3000/registration?_method=POST">
          <!-- email -->
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" placeholder="Enter email" aria-describedby="emailHelp" name="email" id="email" required>
            <small id="emailHelp" class="form-text text-muted">email where the data will be sent</small>
          </div>

          <!-- message -->
          <div class="form-group">
            <label for="message">Message:</label>
            <input type="text" class="form-control" placeholder="Enter message" aria-describedby="messageHelp" name="message" id="message" required>
            <small id="messageHelp" class="form-text text-muted">message</small>
          </div>

          <!-- checkbox -->
          <div class="form-froup form-check">
            <input type="checkbox" name="checkbox" id="checkbox" class="form-check-input" required>
            <label for="checkbox" class="form-check-label">I agree for test send mail</label>
          </div>

          <button type="submit" class="btn btn-primary" style="margin-top: 20px;">submit</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>